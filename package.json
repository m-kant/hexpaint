{
  "name": "hexpaint",
  "version": "1.1.0",
  "description": "Colorize terminal output with ANSI escape codes, using HEX colors",
  "main": "dist/hexpaint.js",
  "scripts": {
    "build": "rimraf ./dist && tsc --project tsconfig.build.json",
    "dev": "nodemon --exec ts-node --files ./src/demo.ts",
    "demo": "nodemon --exec ts-node --files ./src/demo.ts",
    "test": "jest --verbose --silent",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose --silent",
    "test:w:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand"
  },
  "keywords": [
    "format",
    "console",
    "ansi",
    "color",
    "print",
    "terminal",
    "hex"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/m-kant/hexpaint"
  },
  "bugs": {
    "url": "https://github.com/m-kant/hexpaint/issues"
  },
  "author": "mkant@list.ru",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.14.5",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "nodemon": "^2.0.21",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
